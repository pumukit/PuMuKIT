{% set categories_col_1 = {'University' : 1} %}
{% set categories_col_2 = {'Business' : 2,'Natural Sciences' : 3,'Health & Medicine' : 6 } %}
{% set categories_col_3 = {'Humanities' : 5, 'Law' : 4, 'Social & Education' : 7 }%}

{# Images not correspond to channel, image array will set the correct image for each channel #}
{% set images = {1:0,2:1,3:2,4:3,5:4,6:5,7:6} %}

{% set title = "Categories"|trans %}
{% include "@PumukitWebTV/Resources/template_widget_title.html.twig" %}

<div class="row">
    <div class="col-md-4 col-sm-6">
        {% for key, channel in categories_col_1 %}
            <div class="img_category">
                {% set title = "University" %}
                <a href="{{path('pumukit_webtv_channel_series', {'channelNumber': channel } )}}">
                    <img alt="{{ key|trans }} icon" src="{{ asset('bundles/pumukitwebtv/images/categories/'~images[channel]~'.jpg') }}" />
                    <div class="cover">
                        {{ key|trans }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="col-md-4 col-sm-6">
        {% for key, channel in categories_col_2 %}
            <div class="img_category" style="margin-bottom:8px;">
                <a href="{{path('pumukit_webtv_channel_series', {'channelNumber': channel } )}}">
                    <img alt="{{ key|trans }} icon" src="{{ asset('bundles/pumukitwebtv/images/categories/'~images[channel]~'.jpg') }}"/>
                    <div class="cover">
                        {{ key|trans }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>

    <div class="col-md-4 col-sm-6">
        {% for key, channel in categories_col_3 %}
            <div class="img_category" style="margin-bottom:8px;">
                <a href="{{path('pumukit_webtv_channel_series', {'channelNumber': channel } )}}">
                    <img alt="{{ key|trans }} icon" src="{{ asset('bundles/pumukitwebtv/images/categories/'~images[channel]~'.jpg') }}"/>
                    <div class="cover">
                        {{ key|trans }}
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
