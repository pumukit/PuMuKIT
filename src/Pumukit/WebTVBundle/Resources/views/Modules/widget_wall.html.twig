{% if objects %}
    <div class="block-wall-pmk {{ class }}">
        {% include "PumukitWebTVBundle:Resources:template_widget_title.html.twig" %}
        <div class="row wall-container">
            <div class="col-xs-12 col-md-9 wall-image">
                <div class="row">
                    {% set object = objects|first %}
                    {% include 'PumukitWebTVBundle:Resources:template_video.html.twig' with {location: 'wall-block'} %}
                </div>
            </div>

            <div class="col-xs-12 col-md-3 wall-info">
                <a href="{{ path('pumukit_webtv_multimediaobject_index', {'id': object.id}) }}">
                    <div class="wall-title">
                        <h4>{{ object.getTitle() }}</h4>
                    </div>
                </a>
                <div class="wall-subtitle">
                    {{ object.getDescription()|raw }}
                </div>

                <div class="wall-labels">
                    {% include 'PumukitWebTVBundle:MultimediaObject:template_tags.html.twig' with {'multimediaObject': object} %}
                </div>
            </div>
        </div>
    </div>
{% endif %}
