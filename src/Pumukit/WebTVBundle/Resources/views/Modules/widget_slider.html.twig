<div class="block-media-pmk wall_block">
    <h1>
        {{ "Novedades"|trans }}
    </h1>
    <div id="carousel-wall" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for multimediaObject in multimediaObjects %}
                <li data-target="#carousel-wall" data-slide-to="{{ loop.index }}" {% if loop.index == 1 %}class="active"{% endif %}></li>
            {% else %}
                <li data-target="#carousel-wall" data-slide-to="1" class="active"></li>
            {% endfor %}
        </ol>

        <div class="carousel-inner" style="max-height: 450px;">
            {% for multimediaObject in multimediaObjects %}
                <div class="item {% if loop.index == 1 %}active{% endif %}" style="max-height: 400px;">
                    <a href="{{ path('pumukit_webtv_multimediaobject_index', {'id': multimediaObject.getId()}) }}">
                        <img src="{{ asset(multimediaObject|first_url_pic(true)) }}" alt="{{ multimediaObject.getTitle() }}" style="min-width:100%;">

                        <div class="carousel-caption">
                            <div class="background-title">
                                {{ multimediaObject.getTitle() }}
                            </div>
                        </div>
                    </a>
                </div>
            {% else %}
                <div class="item active">
                    <img src="{{ asset(posterEvent) }}" alt="{% trans %}Carousel{% endtrans %}" style="width: 100%;">
                </div>
            {% endfor %}
        </div>

        <a class="left carousel-control" href="#carousel-wall" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-wall" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
