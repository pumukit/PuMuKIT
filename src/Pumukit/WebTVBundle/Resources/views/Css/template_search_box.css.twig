
.search-box {
    margin: 30px 8px 8px 8px;
}
.search-box button {
    padding: 1px 6px;
}
.search-box .input-group {
    border-radius: 8px;
    /*overflow: hidden;*/
}
.search-box .input-group input.form-control {
    border-radius: 4px;
}
#search-box-base,
#search-box-mobile,
#search-box-sticky {
    border-radius: 4px 0 0 4px;
    border-right: 0;
    box-shadow: none;
}
#search-box-base:focus,
#search-box-mobile:focus,
#search-box-sticky:focus {
    border-color: #ccc;
}

@media (max-width: 768px) {
    .search-box {
        margin-top: 8px;
    }
}
