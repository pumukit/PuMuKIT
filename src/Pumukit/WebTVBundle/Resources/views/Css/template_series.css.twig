.series_image_group {
    position:relative;
}

.series_image_group .embed-responsive-item:before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    z-index: 1;
    background: rgba(0, 0, 0, .1);
    z-index: 1;
}

.hover_series {
    position: absolute;
    width: 50%;
    right:0;
    text-align: center;
    background-color: black;
    height: 100%;
    top: 0;
    opacity: 1;
    z-index: 2;
}

.hover_series .text-center {
    height:100%;
}

.hover_series .series_count_mmobj {
    margin-top:15%;
}

.hover_series .series_count_mmobj {
    display:block;
    color: white;
    font-size: 2vw;
    opacity: 1;
}

.hover_series .series_count_text {
    display:block;
    color: white;
    font-size: 1vw;
    opacity: 1;
}

