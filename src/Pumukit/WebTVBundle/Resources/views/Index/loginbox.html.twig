<div class="col-xs-12">
  {% if app.user %}
    <span class="glyphicon glyphicon-user"></span> {{ app.user.fullname ?: app.user.username }}
    {# Go to back-office: TODO: Each user type will go to different places (Viewer doesn't go anywhere) #}
    {% if is_granted('ROLE_SCOPE_GLOBAL') %}
    <a href="{{ url('pumukit_newadmin_index') }}" type="button" class="gotobackoffice-button btn btn-xs btn-default" title="Go to back-office">
      <span class="glyphicon glyphicon-briefcase"></span> {% trans %}Go to back-office{% endtrans %}
    </a>
    {% elseif is_granted('ROLE_SCOPE_PERSONAL') %}
    <a href="{{ url('pumukit_newadmin_index') }}" type="button" class="gotobackofficevideos-button btn btn-xs btn-default" title="Go to back-office">
      <span class="glyphicon glyphicon-briefcase"></span> {% trans %}Manage my videos{% endtrans %}
    </a>
    {% endif %}
    <a href="{{ url('fos_user_security_logout') }}" type="button" class="logout-button btn btn-xs btn-danger" title="Log out">
      <span class="glyphicon glyphicon-log-out"></span> {% trans %}Log out{% endtrans %}
    </a>
  {% else %}
    <a href="{{ url('pumukit_auth') }}" type="button" class="login-button btn btn-xs btn-default" title="Log in">
      <span class="glyphicon glyphicon-log-in"></span> {% trans %}Log in{% endtrans %}
    </a>
  {% endif %}
</div>
