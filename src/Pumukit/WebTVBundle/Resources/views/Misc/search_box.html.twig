{% set idInput = "search-box-" ~ id|default('base') %}
{% set idButton = "submit-button-" ~ id|default('base') %}

<div class="search-box">
    <form class="input-group stylish-input-group" role="search" method="get" action="{{ path('pumukit_webtv_search_multimediaobjects') }}">
        <label for="{{ idInput }}" class="sr-only">
            {% trans %}Search{% endtrans %}
        </label>
        <input type="text" class="form-control" placeholder="{% trans %}Search{% endtrans %}..." name="search" id="{{ idInput }}" />
        <span class="input-group-addon">
            <span class="sr-only">
                {% trans %}Submit{% endtrans %}
            </span>
            <button type="submit" style="border:0;background:transparent;" aria-label="{% trans %}Search{% endtrans %}">
                <span class="sr-only">
                    {% trans %}Search{% endtrans %}
                </span>
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </form>
</div>
