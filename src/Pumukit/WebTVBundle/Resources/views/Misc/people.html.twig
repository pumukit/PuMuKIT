{% set roles = sort_roles(object, true) %}
{% if roles %}
    {% if app.request.attributes.get('_controller') != 'Pumukit\\WebTVBundle\\Controller\\MultimediaObjectController::multimediaInfoAction' %}
    <li class="list-group-item list-group-item-custom">
    {% endif %}
        <ul class="qa-player-roles persons">
            {% for role in roles %}
                {% for person in role.people %}
                    <li class="list-group-item list-group-item-custom">
                        <div class="qa-player-role-{{ role.getCod() }} person">
                            {{ role.getText() }}:
                            {% if person.getWeb() is not empty %}
                                <a href="{{ person.getWeb() }}">{{ person.getHName() }}</a>
                            {% else %}
                                {{ person.getHName() }}
                            {% endif %}
                        </div>
                        {{ person.getInfo() }}
                    </li>
                {% endfor %}
            {% endfor %}
        </ul>
    {% if app.request.attributes.get('_route') == 'pumukit_webtv_multimediaobject_index' %}
    </li>
    {% endif %}
{% endif %}
