{% set id = random() %}
{% set live = event.live %}
{% set advance_live_events = true %}

{% include "PumukitBaseLivePlayerBundle::player.html.twig" %}

<script type="text/javascript">
    {% include "PumukitBaseLivePlayerBundle:Advance/Sessions:common.js.twig" %}

    if(nextSessionsCount === 0 && nowSessionsCount === 0) {
        {% include "PumukitBaseLivePlayerBundle:Advance/Sessions:withoutSessions.js.twig" %}
    } else if (nextSessionsCount > 0 && nowSessionsCount === 0) {
        {% include "PumukitBaseLivePlayerBundle:Advance/Sessions:futureSessions.js.twig" %}
    } else if (nowSessionsCount > 0) {
        {% include "PumukitBaseLivePlayerBundle:Advance/Sessions:nowSessions.js.twig" %}
        {% if event.isIframeUrl() is same as(false) %}
            {% include "PumukitBaseLivePlayerBundle:Advance:player.js.twig" %}
        {% endif %}
    }
</script>
