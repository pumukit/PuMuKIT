{% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_MULTIMEDIA_SERIES')) %}
<script type="text/javascript">
  parent.$('#myModal').modal('hide');

  parent.$('#tracks_mms_{{ mm.id }}').load('{{ path('pumukitnewadmin_track_list', {'id': mm.id}) }}');
  parent.$('#tracks_mms_{{ mm.id }}').html('{% trans %}Update the web page to show master videos{% endtrans %}.');

  var uploaded = '{{ uploaded }}';

  if ('success' == uploaded) parent.success('{% trans %}New Track added.{% endtrans %}');
  else parent.no_success('{{ message|escape('js') }}');
</script>
{% endif %}
