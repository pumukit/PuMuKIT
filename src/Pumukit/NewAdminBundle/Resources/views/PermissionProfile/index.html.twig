{% extends '@PumukitNewAdmin/layout.html.twig' %}

{% block body %}

    <h3 class="cab_body_div">
        <ul class="breadcrumb" style="margin-bottom: 5px;">
            <li class="active">{% trans %}Permission Profiles{% endtrans %}</li>
        </ul>
    </h3>

    <div class="row">
        <div class="col-md-12">
            <div class="well">
                {% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_PERMISSION_PROFILES')) %}
                    <div id="list_permissionprofiles">
                        {% include '@PumukitNewAdmin/PermissionProfile/list.html.twig' %}
                    </div>
                {% else %}
                    {% trans %}You don't have enough permissions to access this content.{% endtrans %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
