{% if is_naked() %}
    {% set colspan = 5 - (series.sorting == constant('SORT_MANUAL', series) ? 0 : 2) - (is_naked() ? 1 : 0) %}
{% else %}
    {% set colspan = 4 - (series.sorting == constant('SORT_MANUAL', series) ? 0 : 2) - (is_naked() ? 1 : 0) %}
{% endif %}

<tr>
    <th width="1%" id="th-checkbox">
        <div class="checkbox pumukit-mms-checkbox">
            <label>
                <input type="checkbox" onclick="window.click_checkbox_all('mm', this.checked)">
            </label>
        </div>
    </th>

    <th id="th-icons" colspan="{{ colspan }}"></th>
    <th id="th-title">{{ "Title"|trans }}</th>
    <th id="th-type" style="width: 1%">{{ "Type"|trans }}</th>
    <th id="th-media" style="width: 1%">{{ "Media"|trans }}</th>
    <th id="th-material" style="width: 1%">{{ "Material"|trans }}</th>
    <th id="th-link" style="width: 1%">{{ "Link"|trans }}</th>
    <th id="th-rec-date" style="width: 2%">{{ "Recording"|trans }}</th>
    <th id="th-pub-date" style="width: 2%">{{ "Publication"|trans }}</th>
    <th id="th-status" style="width: 1%">{{ "Status"|trans }}</th>
    <th id="th-channel" style="width: 1%">{{ "WebTV"|trans }}</th>
    <th id="th-broadcast" style="width: 1%">{{ "Broadcast"|trans }}</th>
    <th id="th-views" style="width: 1%">{{ "Views"|trans }}</th>
    <th id="th-play" style="width: 1%">&nbsp;</th>
</tr>

