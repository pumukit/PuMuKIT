<div class="well">
  <fieldset class="">
    <legend>{% trans %}Person with Role list{% endtrans %}</legend>
    <dl style="margin: 0px">
      {% for role in roles if role.getCod() != personal_scope_role_code %}
      <div class="form-row">
        <dt>{{ role.getName() }}{{ role.getDisplay()?'*':'' }}:</dt>
        <dd>
          <div id="{{ role.getId() }}_person_mms{{ template }}">
            {% include role.isReadOnly() ? 'PumukitNewAdminBundle:Person:listrelationro.html.twig' : 'PumukitNewAdminBundle:Person:listrelation.html.twig' with {'people': mm.getPeopleByRole(role, true), 'mm': mm, 'role': role} %}
          </div>
        </dd>
      </div>
      {% endfor %}
    </dl>
  </fieldset>
</div>
