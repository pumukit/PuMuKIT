{% extends '@PumukitNewAdmin/Inbox/base.html.twig' %}

{% block inbox_body %}
{% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_INBOX')) %}
<p style="padding: 5px">
  <code>{{ dir }}</code> {% trans %}is not readable{% endtrans %}. {% trans %}Check the file system permissions{% endtrans %}.
</p>
{% else %}
  {% trans %}You don't have enough permissions to access this content.{% endtrans %}
{% endif %}
{% endblock %}
