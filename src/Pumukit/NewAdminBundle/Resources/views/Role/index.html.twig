{% extends 'PumukitNewAdminBundle::layout.html.twig' %}

{% block body %}

    <h3 class="cab_body_div">
        <ul class="breadcrumb" style="margin-bottom: 5px;">
            <li class="active">{% trans %}Roles{% endtrans %}</li>
        </ul>
    </h3>

    <div class="row">
        {% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_ROLES')) %}
            <div class="col-md-10">
                <div class="well">
                    <div id="list_roles">
                        {% include 'PumukitNewAdminBundle:Role:list.html.twig' %}
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <select id="options_roles" class="form-control" title="{% trans %}Actions on selected items{% endtrans %}" onchange="window.change_select('role', $(this), 'roles');">
                                <option value="default" selected="selected">{% trans %}Select an action...{% endtrans %}</option>
                                <option disabled="">---</option>
                                <option value="delete_selected">{% trans %}Delete selected{% endtrans %}</option>
                            </select>
                        </div>
                        <div class="col-xs-8 text-right">
                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <a href="{{ path('pumukitnewadmin_role_export') }}" class="qa-roles-export btn btn-primary" download>{% trans %}Export{% endtrans %}</a>
                            {% endif %}
                            <a href="{{ path('pumukitnewadmin_role_create') }}" class="qa-roles-create btn btn-pumukit btn-raised" data-toggle="modal" data-backdrop="static" data-target="#myModal">{% trans %}New{% endtrans %}</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 hidden-xs hidden-sm">
                {% include 'PumukitNewAdminBundle:Role:filters.html.twig' %}
            </div>
        {% else %}
            <div class="col-md-12">
                <div class="well">
                    {% trans %}You don't have enough permissions to access this content.{% endtrans %}
                </div>
            </div>
        {% endif %}
    </div>

{% endblock %}
