<div class="table-responsive">
    {% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_TAGS')) %}
        <table class="table table-striped table-hover pmk-tag-tree">
            <thead>
                <tr>
                    {% include '@PumukitNewAdmin/Tag/listth.html.twig' %}
                </tr>
            </thead>
            <tbody>
                {% if not root %}
                    <tr>
                        <td headers="th-checkbox th-icons th-icons th-code th-name th-num" colspan="8">
                            {% trans %}There are no tags with those values.{% endtrans %}
                        </td>
                    </tr>
                {% else %}
                    {% include '@PumukitNewAdmin/Tag/children.html.twig' %}
                {% endif %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="8" class="foot-td">&nbsp;</th>
                </tr>
            </tfoot>
        </table>
    {% else %}
        {% trans %}You don't have enough permissions to access this content.{% endtrans %}
    {% endif %}
</div>
