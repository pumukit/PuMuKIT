{% extends '@PumukitNewAdmin/layout.html.twig' %}

{% block body %}

    <h3 class="cab_body_div">
        <ul class="breadcrumb" style="margin-bottom: 5px;">
            <li class="active">{% trans %}Tags{% endtrans %}</li>
        </ul>
    </h3>

    <div class="row">
        <div class="col-md-12">
            <div class="well">
                {% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_TAGS')) %}
                    <div id="list_tags">
                        {% include '@PumukitNewAdmin/Tag/list.html.twig' %}
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <select id="options_tags" class="form-control" title="{% trans %}Actions on selected items{% endtrans %}" onchange="window.change_select('tag', $(this), 'tags')">
                                <option value="default" selected="selected">{% trans %}Select an action...{% endtrans %}</option>
                                <option disabled="">---</option>
                                <option value="delete_selected">{% trans %}Delete selected{% endtrans %}</option>
                            </select>
                        </div>
                        <div class="col-xs-8 text-right">
                            {% if root %}
                                <a href="{{ path('pumukitnewadmin_tag_create', {'parent': root.id}) }}" class="btn btn-pumukit btn-raised btn-create-tag" data-toggle="modal" data-backdrop="static" data-target="#myModal">{% trans %}New{% endtrans %}</a>
                            {% endif %}
                        </div>
                    </div>
                {% else %}
                    {% trans %}You don't have enough permissions to access this content.{% endtrans %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
