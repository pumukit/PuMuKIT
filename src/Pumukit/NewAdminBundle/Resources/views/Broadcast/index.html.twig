{% extends 'PumukitNewAdminBundle::layout.html.twig' %}

{% block body %}

<h1>{% trans %}Broadcast profiles{% endtrans %}</h1>

<div class="row">
  {% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_BROADCASTS')) %}
  <div class="col-md-10">
    <div class="well">
      <div id="list_broadcasts">
        {% include 'PumukitNewAdminBundle:Broadcast:list.html.twig' %}
      </div>
      <div class="row">
        <div class="col-xs-4">
          <select id="options_broadcasts" class="form-control" title="{% trans %}Actions on selected items{% endtrans %}" onchange="window.change_select('broadcast', $(this), 'broadcasts');">
            <option value="default" selected="selected">{% trans %}Select an action...{% endtrans %}</option>
            <option disabled="">---</option>
            <option value="delete_selected">{% trans %}Delete selected{% endtrans %}</option>
          </select>
        </div>
        <div class="col-xs-8 text-right">
          <a href="{{ path('pumukitnewadmin_broadcast_create') }}" class="btn btn-pumukit btn-raised" data-toggle="modal" data-backdrop="static" data-target="#myModal">{% trans %}New{% endtrans %}</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-2 hidden-xs hidden-sm">
    {% include 'PumukitNewAdminBundle:Broadcast:filters.html.twig' %}
  </div>
  {% else %}
  <div class="col-md-12">
    <div class="well">
      {% trans %}You don't have enough permissions to access this content.{% endtrans %}
    </div>
  </div>
  {% endif %}
</div>

{% endblock %}
