{% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_MULTIMEDIA_SERIES')) %}
<script type="text/javascript">
  parent.$('#myModal').modal('hide');

  new parent.$('#materials_mms_{{ mm.id }}').load('{{ path('pumukitnewadmin_material_list', {'id': mm.id}) }}');
  new parent.$('#preview_mm').load('{{ path('pumukitnewadmin_mms_show', {'id': mm.id}) }}');

  var uploaded = '{{ uploaded }}';

  if ('success' == uploaded) parent.success('{{ "New Material added."|trans|e("js") }}');
  else parent.no_success('{{ message }}');
</script>
{% endif %}
