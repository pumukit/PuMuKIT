<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">{{ "Add new track"|trans }}</h4>
</div>
<div class="modal-body">
    {% set pathToUpload = path('pumukitnewadmin_track_upload', {'id': mm.id}) %}

    <form id="pumukit_media_form" method="post" target="iframeUpload" action="{{ path('pumukitnewadmin_track_upload', {'id': mm.id}) }}" enctype="multipart/form-data">
        <fieldset>
            {% include '@PumukitWizard/Upload/_profiles.html.twig' %}
            {% include '@PumukitNewAdmin/Media/Form/_upload.html.twig' %}

            <span id="error_file" style="display:none;color:red;" class="error">{% trans %}Empty file field{% endtrans %}</span>
        </fieldset>
        <div class="modal-footer">
            <button type="button" class="btn btn-default btn-raised" data-dismiss="modal">{% trans %}Cancel{% endtrans %}</button>
            <button type="submit" class="btn btn-pumukit btn-raised" id="pumukitnewadmin_media_ok_button" disabled>{% trans %}OK{% endtrans %}</button>
        </div>
    </form>
</div>

<script>
    formElement = document.getElementById('pumukit_media_form');
    {% include "@PumukitCore/Upload/uppy_xhr.js.twig" %}
</script>
