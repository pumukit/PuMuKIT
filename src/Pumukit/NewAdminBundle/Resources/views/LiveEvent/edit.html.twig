<div class="well">

    <div class="info_live_events" style="margin-bottom:10px;">
        {% include '@PumukitNewAdmin/LiveEvent/links.html.twig' %}
    </div>

    <div class="pmk-modal modal fade" id="myAuxModal" tabindex="-1" role="dialog" aria-labelledby="myAuxModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
            </div>
        </div>
    </div>
    
    <div role="tabpanel">
        <ul id="menuTab" class="nav nav-tabs" role="tablist">
            <li class="active">
                <a href="#event" aria-controls="event" role="tab" data-toggle="tab">{% trans %}Event{% endtrans %}</a>
            </li>
            <li>
                <a href="#session" aria-controls="session" role="tab" data-toggle="tab">{% trans %}Session{% endtrans %}</a>
            </li>
            <li>
                <a href="#series" aria-controls="series" role="tab" data-toggle="tab">{% trans %}Series{% endtrans %}</a>
            </li>
            {% if is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_MULTIMEDIA_OWNER_TAB')) %}
                <li>
                    <a href="#groupMm" aria-controls="groupMm" role="tab" data-toggle="tab" class="task_owners_and_groups">{% trans %}Owners & Groups{% endtrans %}</a>
                </li>
            {% endif %}
        </ul>
        <div class="tab-content">
            <div id="event" role="tabpanel" class="tab-pane active">
                {{ render(controller('Pumukit\\NewAdminBundle\\Controller\\EventsController::eventAction', {'id': multimediaObject.getId() })) }}
            </div>
            <div id="session" role="tabpanel" class="tab-pane">
                {{ render(controller('Pumukit\\NewAdminBundle\\Controller\\EventsController::sessionAction', {'id': multimediaObject.getId() })) }}
            </div>
            <div id="series" role="tabpanel" class="tab-pane">
                {{ render(controller('Pumukit\\NewAdminBundle\\Controller\\EventsController::seriesAction', {'id' : multimediaObject.getSeries().getId() })) }}
            </div>
            {% if not is_naked() %}
                {% if is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_MULTIMEDIA_OWNER_TAB')) %}
                    <div id="groupMm" role="tabpanel" class="tab-pane">
                        {% include '@PumukitNewAdmin/MultimediaObject/updategroup.html.twig' with {'mm': multimediaObject, 'personal_scope_role': personal_scope_role} %}
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</div>

<script>
    window.delete_seriespic = function (id, seriesId) {
        if (window.confirm('{% trans %}Are you sure you want to delete this thumbnail?{% endtrans %}')) {
            var url = '{{ path('pumukitnewadmin_seriespic_delete', {'id': '___id___'})|raw }}';
            $('#series').load(url.replace('___id___', id), {'_method': 'DELETE'}, function () {
                success('{% trans %}Thumbnail removed.{% endtrans %}');
            });
        }
    }
</script>
