{% if app.user and is_granted(constant('Pumukit\\SchemaBundle\\Security\\Permission::ACCESS_MULTIMEDIA_SERIES')) %}
<script type="text/javascript">

  parent.$('#myModal').modal('hide');

  parent.$('#list_events').load('{{ path('pumukitnewadmin_event_list') }}', function(){
            parent.$('#preview_event').load('{{ path('pumukitnewadmin_event_show', {'id': event.id})|raw }}');
  });
  parent.$('#list_events').html('{{ "Update the event to show the thumbnail"|trans|e("js") }}.');

  var uploaded = '{{ uploaded }}';

  if ('success' == uploaded) parent.success('{{ "New Thumbnail added."|trans|e("js") }}');
  else parent.no_success('{{ message }}');
</script>
{% else %}
  {% trans %}You don't have enough permissions to access this content.{% endtrans %}
{% endif %}
