{% extends 'PumukitCoreBundle:Inbox:template.html.twig' %}

{% block inbox_body %}
    <form id="inbox_folder_form"
            action="{{ path('file_upload') }}" method="POST">
        <div class="form-group">
            <label for="file" class="control-label text-center">{{ "Select the folder or create a new one where you want to upload the videos. Once this is done, press continue to start uploading the corresponding files"|trans }}:</label>
            <div class="input-group">
                <input type="text" class="form-control" list="items" name="inbox_form_data[folder]" id="folder_inbox" autocomplete="off"/>
                <datalist id="items">
                    {% for folder in folders %}
                        <option value="{{ folder.filename }}">{{ folder.filename }}</option>
                    {% endfor %}
                </datalist>
            </div>
        </div>
        <div class="button-next">
            <button type="submit" class="btn btn-primary btn-raised btn-next">{% trans %}Next{% endtrans %} &raquo;</button>
        </div>
    </form>
{% endblock inbox_body %}
