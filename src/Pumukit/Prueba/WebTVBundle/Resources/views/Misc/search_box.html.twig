{% set idInput = "search-box-" ~ id|default('base') %}
{% set idButton = "submit-button-" ~ id|default('base') %}

<div class="search-box">
    <form class="input-group stylish-input-group" method="get" action="{{ path('pumukit_webtv_search_multimediaobjects') }}">
        <label for="{{ idInput }}" class="sr-only">
            {% trans %}Search{% endtrans %} 
        </label>
        <input type="text" class="form-control" placeholder="{% trans %}Search{% endtrans %}..." name="search" id="{{ idInput }}" />
        <span class="input-group-addon">
            <label for="{{ idButton }}" class="sr-only">{% trans %}Submit{% endtrans %}</label>
            <button type="submit" id="{{ idButton }}" style="border:0;background:transparent;" title="{% trans %}Submit{% endtrans %}">
                <span class="glyphicon glyphicon-search"></span>
            </button>
        </span>
    </form>
</div>