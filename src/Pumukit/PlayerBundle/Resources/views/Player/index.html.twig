{% extends '@PumukitWebTV/layout.html.twig' %}

{% block stylesheets %}
    {% set absolute = "/pumoodle/embed" == app.request.pathInfo ? true : false %}
    {% if absolute %}
        <link href="{{ absolute_url('bundles/pumukitplayer/js/videojs/video-js.css') }}" type="text/css" rel="stylesheet" media="screen">
        <link href="{{ absolute_url('bundles/pumukitplayer/css/player.css') }}" type="text/css" rel="stylesheet" media="screen">
    {% else %}
        <link href="{{ asset('bundles/pumukitplayer/js/videojs/video-js.css') }}" type="text/css" rel="stylesheet" media="screen">
        <link href="{{ asset('bundles/pumukitplayer/css/player.css') }}" type="text/css" rel="stylesheet" media="screen">
    {% endif %}
    <style>
        body {
            margin: 0;
            padding: 0;
        }
    </style>
{% endblock %}

{% block javascripts %}
    {% set absolute = "/pumoodle/embed" == app.request.pathInfo ? true : false %}
    {% if absolute %}
        <script src="{{ absolute_url('bundles/pumukitplayer/js/videojs/video.min.js') }}" type="text/javascript"></script>
        <script src="{{ absolute_url('bundles/pumukitplayer/js/videojs/videojs-playlist.min.js') }}" type="text/javascript"></script>
    {% else %}
        <script src="{{ asset('bundles/pumukitplayer/js/videojs/video.min.js') }}" type="text/javascript"></script>
        <script src="{{ asset('bundles/pumukitplayer/js/videojs/videojs-playlist.min.js') }}" type="text/javascript"></script>
    {% endif %}
{% endblock %}

{% block title %}{{ parent() }} - {{ object.title }}{% endblock %}
{% block keywords %}{{ parent() }} - {{ object.keywords|join(',') }}{% endblock %}

{% block body_base %}
{% endblock %}
