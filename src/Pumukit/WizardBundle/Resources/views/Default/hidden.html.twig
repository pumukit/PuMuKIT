{% block hidden_inputs %}
    {% if license_enable and form_data.license.accept is defined %}
        <input type="hidden" name="pumukitwizard_form_data[license][accept]" id="pumukitwizard_multimediaobject_license_accept" value="{{ form_data.license.accept }}">
    {% endif %}

    <input type="hidden" name="pumukitwizard_form_data[same_series]" id="pumukitwizard_same_series" value="{{ same_series ? 1 : 0 }}">

    {% if form_data.series is defined %}
        {% if form_data.series.new is defined and step != 'series' %}
            <input type="hidden" name="pumukitwizard_form_data[series][new]" id="pumukitwizard_series_new" value="{{ form_data.series.new }}">
        {% endif %}
        {% if form_data.series.id is defined %}
            <input type="hidden" name="pumukitwizard_form_data[series][id]" id="pumukitwizard_series_id" value="{{ form_data.series.id }}">
        {% else %}
            <input type="hidden" name="pumukitwizard_form_data[series][id]" id="pumukitwizard_series_id" value="">
        {% endif %}
        {% for field, locales in form_data.series %}
            {% if step != 'series' %}
                {% for locale, value in locales %}
                    <input type="hidden" name="pumukitwizard_form_data[series][{{ field }}][{{ locale }}]" id="pumukitwizard_track_series_{{ field }}_{{ locale }}" value="{{ value }}" class="pumukitwizard_track_series_{{ field }} locale-{{ locale }}">
                {% endfor %}
            {% endif %}
        {% endfor %}
    {% endif %}

    {% if form_data.type.option is defined and step != 'type' %}
        <input type="hidden" name="pumukitwizard_form_data[type][option]" id="pumukitwizard_track_type_option" value="{{ form_data.type.option }}">
    {% endif %}

    {% if form_data.type.option is defined and 'single' == form_data.type.option and step != 'multimediaobject' and form_data.multimediaobject is defined %}
        {% if show_tags and form_data.multimediaobject.tag is defined %}
            <input type="hidden" name="pumukitwizard_form_data[multimediaobject][tag]" id="pumukitwizard_track_multimediaobject_tag" value="{{ form_data.multimediaobject.tag }}">
        {% endif %}

        {% if show_object_license and form_data.multimediaobject.license is defined %}
            <input type="hidden" name="pumukitwizard_form_data[multimediaobject][license]" id="pumukitwizard_track_multimediaobject_license" value="{{ form_data.multimediaobject.license }}">
        {% endif %}

        {% if form_data.multimediaobject.status is defined %}
            <input type="hidden" name="pumukitwizard_form_data[multimediaobject][status]" id="pumukitwizard_track_multimediaobject_status" value="{{ form_data.multimediaobject.status }}">
        {% endif %}

        {% if form_data.multimediaobject.broadcast is defined %}
            <input type="hidden" name="pumukitwizard_form_data[multimediaobject][broadcast]" id="pumukitwizard_track_multimediaobject_broadcast" value="{{ form_data.multimediaobject.broadcast }}">
        {% endif %}

        {% for field, locales in form_data.multimediaobject %}
            {% for locale, value in locales %}
                <input type="hidden" name="pumukitwizard_form_data[multimediaobject][{{ field }}][{{ locale }}]" id="pumukitwizard_track_multimediaobject_{{ field }}_{{ locale }}" value="{{ value }}" class="pumukitwizard_track_multimediaobject_{{ field }} locale-{{ locale }}">
            {% endfor %}
        {% endfor %}
    {% endif %}
{% endblock %}
