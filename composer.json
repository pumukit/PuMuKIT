{
    "name": "pumukit/pumukit",
    "license": "AGPL-3.0-or-later",
    "version": "4.0.x-dev",
    "type": "project",
    "description": "Media Portal",
    "require": {
        "php": ">=7.4",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-json": "*",
        "ext-mongodb": "*",
        "ext-sysvsem": "*",
        "ankitpokhrel/tus-php": "1.*",
        "api-platform/core": "^2.5",
        "babdev/pagerfanta-bundle": "^2.8",
        "doctrine/mongodb-odm-bundle": "~4",
        "gedmo/doctrine-extensions": "^3.0",
        "jaybizzle/crawler-detect": "^1.2",
        "jms/serializer-bundle": "^3.0",
        "knplabs/knp-menu-bundle": "^3.0",
        "mobiledetect/mobiledetectlib": "^2.8",
        "nelmio/cors-bundle": "^2.1",
        "phpdocumentor/reflection-docblock": "^4.0",
        "sensio/framework-extra-bundle": "^5.5",
        "symfony/asset": "^4.0",
        "symfony/css-selector": "^4.0",
        "symfony/dotenv": "^4.0",
        "symfony/event-dispatcher": "^4.0",
        "symfony/expression-language": "^4.0",
        "symfony/flex": "^1.6",
        "symfony/form": "^4.0",
        "symfony/http-kernel": "^4.0",
        "symfony/mercure-bundle": "^0.3.4",
        "symfony/monolog-bundle": "^3.0",
        "symfony/security-bundle": "^4.0",
        "symfony/serializer": "^4.0",
        "symfony/swiftmailer-bundle": "^3.0",
        "symfony/templating": "^4.0",
        "symfony/translation": "^4.0",
        "symfony/twig-bundle": "^4.0",
        "symfony/validator": "^4.0",
        "symfony/yaml": "^4.0",
        "teltek/pumukit-stats-ui-bundle": "^3.0",
        "twig/extra-bundle": "^3.0",
        "twig/intl-extra": "^3.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3",
        "php-parallel-lint/php-var-dump-check": "^0.5",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-symfony": "^0.12",
        "phpunit/phpunit": "^9",
        "symfony/browser-kit": "^4.0",
        "symfony/debug-bundle": "^4.0",
        "symfony/maker-bundle": "^1.26",
        "symfony/phpunit-bridge": "^4.0",
        "symfony/stopwatch": "^4.4",
        "symfony/web-profiler-bundle": "^4.4"
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "lint-yaml": [
            "bin/console lint:yaml src",
            "bin/console lint:yaml config"
        ],
        "lint-twig": [
            "bin/console lint:twig src",
            "bin/console lint:twig templates"
        ],
        "lint-generic": [
            "find src -type f -name '.php' -print0 | xargs -0 -n1 -P8 php -l",
            "bin/travis_checks/check_var_dumps"
        ],
        "php-cs-fixer": "vendor/bin/php-cs-fixer fix src --dry-run -v",
        "php-stan": [
            "vendor/bin/phpstan analyse -l 1 src"
        ],
        "tests": "APP_ENV=test vendor/bin/phpunit",
        "ci": [
            "@lint-yaml",
            "@lint-twig",
            "@lint-generic",
            "@php-cs-fixer",
            "@php-stan",
            "@tests"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    },
    "config": {
        "platform": {
            "ext-mongo": "1.6.16"
        },
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Pumukit\\": "src/Pumukit/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/",
            "Pumukit\\Tests\\": "tests/"
        }
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "^4.0"
        }
    }
}
